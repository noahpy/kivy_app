


<LoginScreen>:
    name: "login"

    user:user
    passw:passw
    FloatLayout:
        Label:
            font_size:root.height*0.015+root.width*0.015
            text:"Password:"
            size_hint: 0.4,0.1
            pos_hint:{"x":0.09,"y":0.5}
        TextInput:
            id:passw
            font_size: root.height*0.02+root.width*0.005
            multiline:False
            size_hint: 0.4,0.05
            pos_hint:{"x":0.5,"y":0.525}
        Label:
            font_size:root.height*0.015+root.width*0.015
            text:"Email or Username:"
            size_hint: 0.4,0.1
            pos_hint:{"x":0.09,"y":0.7}
        TextInput:
            id:user
            font_size: root.height*0.02+root.width*0.005
            multiline:False
            size_hint: 0.4,0.05
            pos_hint:{"x":0.5,"y":0.725}
        Button:
            font_size:root.height*0.0175+root.width*0.0175
            text: "Login"
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.45, 0.075
            on_release:
                root.manager.transition.direction = "up"
                root.login_btn()
        Button:
            background_color: 1,1,0,1
            font_size:root.width*0.011+root.height*0.011
            text: "Create a new account"
            pos_hint:{"x":0.35,"y":0.15}
            size_hint: 0.35, 0.05
            on_release:
                root.manager.transition.direction = "right"
                root.new_btn()


